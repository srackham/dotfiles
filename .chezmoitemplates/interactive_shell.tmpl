#
# Shared functions
#

# Search for regular expression matches in markdown and text files in ~/doc directory.
# Print file names in ascending order of match count (file wit the most matches is printed last).
# Usage: rgdocs PATTERN
function rgdocs() {
    if [ -z "$1" ]; then
        echo "missing search pattern" >&2
        return 1
    fi
    rg -wil --count-matches -t txt -t markdown "$1"  "$HOME/doc" \
        | sort -t ':' -k2n \
        | tail -40 \
        | awk -F':' '{print $1}'
}

# Recoll document search, lists file names that match query.
# Usage: ds query
function ds() {
    if [ "$*" ]; then
        recoll -t -q $*  2>/dev/null \
            | tail -n +3 \
            | head -n 20 \
            | perl -pe 's|^.*\[file:\/\/(.*?)\].*$|\1|'
    else
        echo "missing search query" >&2
        return 1
    fi
}
