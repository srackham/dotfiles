### Prompt

# Customize prompt (see https://www.nushell.sh/book/line_editor.html#customizing-your-prompt)
def create_left_prompt [] {
    let path_segment = ($env.PWD)
    $"\n($path_segment)\n\u{200B}"    # Zero width space to prevent \n from being stripped.
}
def create_right_prompt [] {
    ""  # No right prompt.
}
$env.PROMPT_INDICATOR = "$"
$env.PROMPT_INDICATOR_VI_INSERT = "$ "
$env.PROMPT_INDICATOR_VI_NORMAL = "$"
$env.PROMPT_MULTILINE_INDICATOR = "> "
$env.PROMPT_COMMAND = { create_left_prompt }
$env.PROMPT_COMMAND_RIGHT = { create_right_prompt }


### Commands

# Search the recoll index for files containing all keywords.
def ds [
  ...keywords: string # Search terms.
  ] {
    if ($keywords | length) > 0 {
        do { recoll -t -q $keywords }   # Use `do {..}` to drop stderr.
            | lines
            | skip 2
            | last 20
            | each { |it| $it | parse --regex '^.*?\[file:\/\/(?P<filename>.*?)\]' }
            | flatten
            | get filename
    } else {
        error make { msg: "usage: ds KEYWORDS" }
    }
}