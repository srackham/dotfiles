# vim: set filetype=bash:

if [ -f ~/.profile ]; then
    # shellcheck source=/home/srackham/.profile
    [ ! -v _PROFILE ] && source ~/.profile # Only source this file once.
    export _PROFILE=yes
fi

# Because bash login shell does not source ~/.bashrc
if [ -f ~/.bashrc ]; then
    # shellcheck source=/home/srackham/.bashrc
    source ~/.bashrc
fi
